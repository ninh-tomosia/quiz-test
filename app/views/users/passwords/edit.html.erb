<div class="container">
  <%= render  "/layouts/menu" %>
  <div class="content">
    <div class="form-login">
      <h2>Change your password</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Enter your password" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Enter your password again" %>
        </div>

        <div class="actions">
          <%= f.submit "Change my password", class: "btn btn-primary" %>
        </div>
        <div>
          Do you already have an account?  <%= link_to  "Login", signin_path %>
          <br>
          Do not have an account?  <%= link_to  "Sign up", signup_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render  "/layouts/footer" %>