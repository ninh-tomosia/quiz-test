<div class="container">
  <%= render  "/layouts/menu" %>
  <div class="content">
    <div class="form-login">
      <h2>Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter your email...", class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "Reset password", class: "btn btn-primary" %>
        </div>
        <div>
          Do you already have an account?  <%= link_to  "Login", signin_path %>
          <br>
          Do not have an account?  <%= link_to  "Sign up", signup_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render  "/layouts/footer" %>